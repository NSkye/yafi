{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "src/typings",
    ],
    "outDir": "dist",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es2018",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node", 
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
